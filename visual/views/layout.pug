html
  head
    title N|Solid Autoscale Demo

    script(src="/socket.io/socket.io.js" type="text/javascript")
    script(src="js/jquery.js" type="text/javascript")
    script(src="js/d3.min.js" type="text/javascript")
    script(src="js/epoch.min.js" type="text/javascript")
    link(rel="stylesheet" type="text/css" href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css" crossorigin="anonymous")
    link(rel="stylesheet" type="text/css" href="css/epoch.min.css")
  body
    .wrapper(style="margin-top:20px;")
      .container(style="max-width:1000px")
        .row
          .col-12
            block body
              .row
                table.table
                  thead.thead-dark
                    tr
                      th avg
                      th max
                      th med
                      th min
                      th p(90)
                      th p(95)
                  tbody
                    tr
                      td#reqAvg
                      td#reqMax
                      td#reqMed
                      td#reqMin
                      td#reqP90
                      td#reqP95
              .row
                .col-12
                  iframe(src=NSOLID_CONSOLE, width="100%", height="460px")
              .row
                // #rps.epoch.gauge-medium
                #chart.epoch.category20c(style="width:100%;height:100px")
              .row
                .col-12
                  table.table
                    thead.thead-dark
                      tr
                        th#rate 0
                        th#total(style="text-align:right;") 0
                .col-12
                  #status.alert.alert-dark Not Running
    script(src="js/loader.js", type="text/javascript")